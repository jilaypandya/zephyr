config STEPPER_TIMING_SOURCES
	bool "Stepper Timing Sources"
	help
	  Enable timing sources for stepper

if STEPPER_TIMING_SOURCES

config STEPPER_TIMING_SOURCES_COUNTER_TIMING
	bool "Counter use for stepping"
	select COUNTER
	default y
	help
	  Enable usage of a counter device for accurate stepping.

endif
